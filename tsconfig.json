{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2019",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.ts", "./packages/**/*.ts", "setupTest.js", "jest.config.js"],
  "exclude": ["**/dist/**", "node_modules"]
}
